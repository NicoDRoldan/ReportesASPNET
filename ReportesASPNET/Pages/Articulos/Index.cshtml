@page
@model ReportesASPNET.Pages.Articulos.IndexModel
@{
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Articulos</title>
</head>
<body>
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Artículos</h6>
            <a class='btn btn-primary btn-sm' href='/Articulos/Create'>Nuevo Articulo</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Rubro</th>
                            <th>Estado</th>
                            <th>Descripcion</th>
                            <th>Fecha de alta</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.listaArticulos)
                        {
                            <tr>
                                <td>@item.idArticulo</td>
                                <td>@item.nombre</td>
                                <td>@string.Format("{0:0.00}", item.precio)</td>
                                <td>@item.rubro</td>
                                <td>@(item.activo ? "Activo" : "Desactivado")</td>
                                <td>@item.descripcion</td>
                                <td>@item.fecha</td>

                                <td>
                                    <a class='btn btn-info btn-sm' href='/Articulos/Edit?idArticulo=@item.idArticulo'>Editar</a>
                                    <a class='btn btn-danger btn-sm' href='/Articulos/Delete?idArticulo=@item.idArticulo'>Eliminar</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>