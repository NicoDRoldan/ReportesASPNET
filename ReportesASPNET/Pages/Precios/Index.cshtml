@page
@model ReportesASPNET.Pages.Precios.IndexModel
@{
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Precios</title>
</head>
<body>
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Precios</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID Artículo</th>
                            <th>Precio</th>
                            <th>Fecha</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.listaPrecios)
                        {
                            <tr>
                                <td>@item.id_Articulo</td>
                                <td>@string.Format("{0:0.00}", item.precio)</td>
                                <td>@item.fecha</td>

                                <td>
                                    <a class='btn btn-danger btn-sm' href='/Precios/Delete?idArticulo=@item.id_Articulo'>Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>